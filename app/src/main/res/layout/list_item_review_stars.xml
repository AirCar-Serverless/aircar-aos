<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/txt_review_title"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="리뷰"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/txt_review_rate"
        />

    <TextView
        android:id="@+id/txt_review_rate"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="4.7"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@id/txt_review_title"
        app:layout_constraintRight_toLeftOf="@id/txt_review_stars_num"
        />

    <TextView
        android:id="@+id/txt_review_stars_num"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="리뷰(717)"
        android:textSize="15dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/txt_review_title"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@+id/txt_review_rate"
        app:layout_constraintBottom_toTopOf="@id/icon_rating"/>

    <RatingBar
        android:id="@+id/icon_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.RatingBar.Indicator"
        android:numStars="5"
        android:rating="3"
        android:stepSize="0.5"
        android:isIndicator="true"
        app:layout_constraintTop_toBottomOf="@id/txt_review_rate"
        app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>