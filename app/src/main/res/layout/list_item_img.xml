<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="300dp">

    <com.denzcoskun.imageslider.ImageSlider
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/image_slider"
        app:iss_auto_cycle="false"
        app:iss_title_background="@color/transparent"
        app:iss_selected_dot="@color/transparent"
        app:iss_unselected_dot="@color/transparent"/>
    <TextView
        android:id="@+id/txt_img_slide_pos"
        android:layout_width="52dp"
        android:layout_height="25dp"
        android:textSize="12dp"
        android:textColor="#FFFFFF"
        tools:text="1/10"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/bg_img_slider"
        app:layout_constraintRight_toRightOf="@id/image_slider"
        app:layout_constraintBottom_toBottomOf="@id/image_slider"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>