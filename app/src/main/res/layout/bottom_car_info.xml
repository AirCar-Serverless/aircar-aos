<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:paddingHorizontal="20dp">

    <TextView
        android:id="@+id/txt_reserv_price"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/txt_reserv_time"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="총 가격원"
        android:textStyle="bold"
        android:textColor="#424242"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/txt_reserv_time"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        app:layout_constraintTop_toBottomOf="@id/txt_reserv_price"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="시간"
        android:textSize="12dp"
        android:textColor="#333333"/>

    <Button
        android:id="@+id/reservation_btn"
        android:text="예약하기"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:layout_marginVertical="20dp"
        android:layout_width="160dp"
        android:layout_height="55dp"
        android:background="@drawable/btn_round_red"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>